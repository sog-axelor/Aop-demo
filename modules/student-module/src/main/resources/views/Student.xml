<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<grid model="com.axelor.student.db.Student" title="StudentRecord"
		name="student-grid">
		<field name="firstName" />
		<field name="lastName" />
		<field name="fullName"/>
		<field name="phoneNumber" />
		<field name="fees" />
		<field name="photo" />
		<field name="email" />
		<field name="active" />
		<field name="school" />
	</grid>


	<form model="com.axelor.student.db.Student" title="Student"
		name="student-form" onNew="action-student-record-onnew"   onSave="action-student-record-save" width="large">		<!-- onLoad="action-student-record-onload" -->
		<panel>
			<field name="firstName" />
			<field name="lastName" />
			<field name="phoneNumber" />
			<field name="fees" />
			<field name="photo" />
			<field name="email" />
			<field name="active" />
			<field name="school" />
		</panel>
	</form>
	
	<action-record name="action-student-record-save" model="com.axelor.student.db.Student">
	<field name="active" expr="true"/>
	</action-record>
	
		<!-- <action-validate name="action-student-record-onload">
		<notify message="This is goverment school" if="school == schoolType.goverment"/>
		</action-validate> -->
	
	<action-record name="action-student-record-onnew" model="com.axelor.student.db.Student" >
	<field name="fees" expr="25000.00"/>
	</action-record>
	

	
</object-views>



	























