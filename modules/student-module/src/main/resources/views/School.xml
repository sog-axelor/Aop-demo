<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<grid model="com.axelor.student.db.School" title="Schools"
		name="school-grid">
		<toolbar>
			<button onClick="clickMe" name="clickMeBtn"
				prompt="Are You Sure !!! (Form toolBar)" title="Click Me"
				icon="fa-print" />
		</toolbar>
		<hilite if="address == null" color="danger" />
		<field name="schoolName" />
		<field name="address" />
		<field name="schoolType" />

		<field name="studentList">
			<grid title="Students">
				<field name="firstName" />
				<field name="lastName" />
				<field name="phoneNumber" />
				<field name="fees" />
				<field name="photo" />
				<field name="email" />
				<field name="active" />
				<field name="school" />
			</grid>
			<form title="Student">
				<field name="firstName" />
				<field name="lastName" />
				<field name="phoneNumber" />
				<field name="fees" />
				<field name="photo" />
				<field name="email" />
				<field name="active" />
				<field name="school" />
			</form>

		</field>
	</grid>

	<form model="com.axelor.student.db.School" title="School"
		name="school-form" width="large">
		<panel>

			<field name="schoolName" />
			<field name="address" />
			<field name="schoolType" />
		</panel>
		<panel-tabs>
			<panel-related field="studentList" colSpan="12" />
			<panel-related field="peopleSet" colSpan="12" x-selector="checkbox"/>
		</panel-tabs>
	</form>

</object-views>